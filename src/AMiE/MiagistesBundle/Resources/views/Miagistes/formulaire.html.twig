{% extends "AMiEHomeBundle::layout.html.twig" %}

{% block title "Formulaire de fin d'études" %}

{% block head "Formulaire de fin d'études" %}

{% block content %}
<form action="{{ path('amie_miagistes_formulaire') }}" method="POST" {{ form_enctype(formMiag) }}>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-phone fa-fw"></i> Vos coordonnées</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								{{ form_label(formMiag.nom, 'Nom *') }}
								{{ form_widget(formMiag.nom, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiag.prenom, 'Prénom *') }}
								{{ form_widget(formMiag.prenom, { 'attr': {'class': 'form-control', 'placeholder': 'Prénom'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiag.dateNaissance, 'Date de naissance *') }}
								{{ form_widget(formMiag.dateNaissance, { 'attr': {'class': 'form-control'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiag.rue, 'Rue, voie *') }}
								{{ form_widget(formMiag.rue, { 'attr': {'class': 'form-control', 'placeholder': 'Rue, voie'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiag.codePostal, 'Code postal *') }}
								{{ form_widget(formMiag.codePostal, { 'attr': {'class': 'form-control', 'placeholder': 'Code postal'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiag.ville, 'Ville *') }}
								{{ form_widget(formMiag.ville, { 'attr': {'class': 'form-control', 'placeholder': 'Ville'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiag.numero, 'Numéro de téléphone *') }}
								{{ form_widget(formMiag.numero, { 'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiag.mail, 'Adresse mail *') }}
								{{ form_widget(formMiag.mail, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse mail'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiag.anneePromo, 'Année de promotion *') }}
								{{ form_widget(formMiag.anneePromo, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-globe fa-fw"></i> Insertion professionnelle</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								{{ form_label(formMiag.entAccueil, 'Entreprise où vous avez effectué l\'apprentissage *') }}
                                {{ form_widget(formMiag.entAccueil, { 'attr': {'class': 'form-control', 'placeholder': 'Entreprise'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.embauche, 'Êtes-vous embauché (sous contrat de travail) ? *') }}
                                {{ form_widget(formMiag.embauche, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.typeContrat, 'Si oui, avec quel contrat ?') }}
                                {{ form_widget(formMiag.typeContrat, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.typeContratAutre, 'Si autre, précisez') }}
                                {{ form_widget(formMiag.typeContratAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Type du contrat'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.entActuelle, 'Si oui, par votre entreprise d\'accueil ?') }}
                                {{ form_widget(formMiag.entActuelle, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.raisonNonEmbauche, 'Si vous n\'êtes pas embauché par votre entreprise d\'accueil, quelles en sont les raisons ?') }}
                                {{ form_widget(formMiag.raisonNonEmbauche, { 'attr': {'class': 'form-control'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.raisonAutre, 'Si pour d\'autres raisons, précisez') }}
                                {{ form_widget(formMiag.raisonAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Raisons'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.entrepriseAutre, 'Vous êtes embauché par une autre entreprise, laquelle ?') }}
                                {{ form_widget(formMiag.entrepriseAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Entreprise'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.niveauSalaire, 'Quel est votre niveau de salaire annuel brut prévu (en €) ?') }}
                                {{ form_widget(formMiag.niveauSalaire, { 'attr': {'class': 'form-control', 'placeholder': 'Salaire'} }) }}
							</div>							
							<div class="form-group">
                                {{ form_label(formMiag.situationNonEmbauche, 'Si vous n\'êtes pas embauché, quelle est votre situation actuelle ?') }}
                                {{ form_widget(formMiag.situationNonEmbauche, { 'attr': {'class': 'form-control', 'placeholder': 'Situation'} }) }}
							</div>							
							<div class="form-group">
                                {{ form_label(formMiag.situationAutre, 'Si dans une autre situation, précisez') }}
                                {{ form_widget(formMiag.situationAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Situation'} }) }}
							</div>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-briefcase fa-fw"></i> Embauché : votre métier, votre entreprise</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
                                {{ form_label(formMiag.secteur, 'Secteur d\'activité de votre entreprise') }}
                                {{ form_widget(formMiag.secteur, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.sectAutre, 'Si autre, précisez') }}
                                {{ form_widget(formMiag.sectAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Autre secteur'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.metier, 'Votre métier dans cette entreprise') }}
                                {{ form_widget(formMiag.metier, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiag.metAutre, 'Si autre, précisez') }}
                                {{ form_widget(formMiag.metAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Autre métier'} }) }}
							</div>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
			{{ form_rest(formMiag) }}
		</div>
		<!-- /.col-lg-12 -->
		<div class="col-sm-offset-10 col-sm-1">
			<button type="submit" class="btn btn-primary">Valider</button>
		</div>
	</div>
	<!-- /.row -->
</form>
<!-- /.form -->
{% endblock %}