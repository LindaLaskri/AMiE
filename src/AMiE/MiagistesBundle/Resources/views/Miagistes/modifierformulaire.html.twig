{% extends "AMiEHomeBundle::layout.html.twig" %}

{% block title "Modification" %}

{% block head "Modification d'un formulaire" %}

{% block content %}
<form action="{{ path('amie_miagistes_modifierformulaire', { 'id': id }) }}" method="POST" {{ form_enctype(formMiagModif) }}>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-phone fa-fw"></i> Vos coordonnées</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								{{ form_label(formMiagModif.nom, 'Nom *') }}
								{{ form_widget(formMiagModif.nom, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiagModif.prenom, 'Prénom *') }}
								{{ form_widget(formMiagModif.prenom, { 'attr': {'class': 'form-control', 'placeholder': 'Prénom'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiagModif.dateNaissance, 'Date de naissance *') }}
								{{ form_widget(formMiagModif.dateNaissance, { 'attr': {'class': 'form-control'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiagModif.rue, 'Rue, voie *') }}
								{{ form_widget(formMiagModif.rue, { 'attr': {'class': 'form-control', 'placeholder': 'Rue, voie'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiagModif.codePostal, 'Code postal *') }}
								{{ form_widget(formMiagModif.codePostal, { 'attr': {'class': 'form-control', 'placeholder': 'Code postal'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiagModif.ville, 'Ville *') }}
								{{ form_widget(formMiagModif.ville, { 'attr': {'class': 'form-control', 'placeholder': 'Ville'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiagModif.numero, 'Numéro de téléphone *') }}
								{{ form_widget(formMiagModif.numero, { 'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiagModif.mail, 'Adresse mail *') }}
								{{ form_widget(formMiagModif.mail, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse mail'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(formMiagModif.anneePromo, 'Année de promotion *') }}
								{{ form_widget(formMiagModif.anneePromo, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-globe fa-fw"></i> Insertion professionnelle</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								{{ form_label(formMiagModif.entAccueil, 'Entreprise où vous avez effectué l\'apprentissage *') }}
                                {{ form_widget(formMiagModif.entAccueil, { 'attr': {'class': 'form-control', 'placeholder': 'Entreprise'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.embauche, 'Êtes-vous embauché (sous contrat de travail) ? *') }}
                                {{ form_widget(formMiagModif.embauche, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.typeContrat, 'Si oui, avec quel contrat ?') }}
                                {{ form_widget(formMiagModif.typeContrat, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.typeContratAutre, 'Si autre, précisez') }}
                                {{ form_widget(formMiagModif.typeContratAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Type du contrat'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.entActuelle, 'Si oui, par votre entreprise d\'accueil ?') }}
                                {{ form_widget(formMiagModif.entActuelle, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.raisonNonEmbauche, 'Si vous n\'êtes pas embauché par votre entreprise d\'accueil, quelles en sont les raisons ?') }}
                                {{ form_widget(formMiagModif.raisonNonEmbauche, { 'attr': {'class': 'form-control'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.raisonAutre, 'Si pour d\'autres raisons, précisez') }}
                                {{ form_widget(formMiagModif.raisonAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Raisons'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.entrepriseAutre, 'Vous êtes embauché par une autre entreprise, laquelle ?') }}
                                {{ form_widget(formMiagModif.entrepriseAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Entreprise'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.niveauSalaire, 'Quel est votre niveau de salaire annuel brut prévu (en €) ?') }}
                                {{ form_widget(formMiagModif.niveauSalaire, { 'attr': {'class': 'form-control', 'placeholder': 'Salaire'} }) }}
							</div>							
							<div class="form-group">
                                {{ form_label(formMiagModif.situationNonEmbauche, 'Si vous n\'êtes pas embauché, quelle est votre situation actuelle ?') }}
                                {{ form_widget(formMiagModif.situationNonEmbauche, { 'attr': {'class': 'form-control', 'placeholder': 'Situation'} }) }}
							</div>							
							<div class="form-group">
                                {{ form_label(formMiagModif.situationAutre, 'Si dans une autre situation, précisez') }}
                                {{ form_widget(formMiagModif.situationAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Situation'} }) }}
							</div>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-briefcase fa-fw"></i> Embauché : votre métier, votre entreprise</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
                                {{ form_label(formMiagModif.secteur, 'Secteur d\'activité de votre entreprise') }}
                                {{ form_widget(formMiagModif.secteur, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.sectAutre, 'Si autre, précisez') }}
                                {{ form_widget(formMiagModif.sectAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Autre secteur'} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.metier, 'Votre métier dans cette entreprise') }}
                                {{ form_widget(formMiagModif.metier, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
                                {{ form_label(formMiagModif.metAutre, 'Si autre, précisez') }}
                                {{ form_widget(formMiagModif.metAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Autre métier'} }) }}
							</div>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
			{{ form_rest(formMiagModif) }}
		</div>
		<!-- /.col-lg-12 -->
		<div class="col-sm-offset-10 col-sm-1">
			<button type="submit" class="btn btn-primary">Valider</button>
		</div>
	</div>
	<!-- /.row -->
</form>
<!-- /.form -->
{% endblock %}