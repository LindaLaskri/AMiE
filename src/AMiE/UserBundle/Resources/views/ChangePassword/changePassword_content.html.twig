
<form action="{{ path('fos_user_change_password') }}" method="POST" class="fos_user_change_password" {{ form_enctype(form) }}>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-wrench fa-fw"></i> Mot de passe</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								{{ form_label(form.current_password, 'Mot de passe actuel *') }}
								{{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': ''} }) }}
							</div>
							<div class="form-group">
								{{ form_label(form.new.children['first'], 'Nouveau mot de passe *') }}
								{{ form_widget(form.new.children['first'], { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(form.new.children['second'], 'Vérification du mot de passe *') }}
								{{ form_widget(form.new.children['second'], { 'attr': {'class': 'form-control', 'placeholder': 'Répéter mot de passe'} }) }}
							</div>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-12 -->
		<div class="col-sm-offset-10 col-sm-1">
			<button type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary">Valider</button>
		</div>
	</div>
	<!-- /.row -->
</form>
<!-- /.form -->