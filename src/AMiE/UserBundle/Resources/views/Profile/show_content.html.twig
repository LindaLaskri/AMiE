<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2>{{ user.username }}
				</h2>		
			</div>
			<!-- /.panel-heading -->
			<div class="clearfix">
				<div class="panel-body">
					<div class="row">
						<h4 style="padding-left: 20px; display: inline;"><i class="fa fa-phone fa-fw"></i> Coordonnées</h4>
						
						<dl class="dl-horizontal">
							<dt>
								Nom
							</dt>
							<dd>
								{{ user.nom }}
							</dd>
						</dl>
						{% if user.typeUt == 'Entreprise' %}
						<dl class="dl-horizontal">
							<dt>
								Siret
							</dt>
							<dd>
								{{ user.siret }}
							</dd>
						</dl>
						{% endif %}
						{% if user.typeUt == 'Etudiant' or user.typeUt == 'Responsable' %}
						<dl class="dl-horizontal">
							<dt>
								Prénom
							</dt>
							<dd>
								{{ user.prenom }}
							</dd>
						</dl>
						{% endif %}
						<dl class="dl-horizontal">
							<dt>
								Rue, voie
							</dt>
							<dd>
								{{ user.rue }}
							</dd>
						</dl>
						<dl class="dl-horizontal">
							<dt>
								Code postal
							</dt>
							<dd>
								{{ user.codePostal }}
							</dd>
						</dl>
						<dl class="dl-horizontal">
							<dt>
								Ville
							</dt>
							<dd>
								{{ user.ville }}
							</dd>
						</dl>					
						<dl class="dl-horizontal">
							<dt>
								Numéro de téléphone
							</dt>
							<dd>
								{{ user.numero }}
							</dd>
						</dl>
						<dl class="dl-horizontal">
							<dt>
								Adresse email
							</dt>
							<dd>
								{{ user.email }}
							</dd>
						</dl>
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.clearfix -->
			{% if user.typeUt == 'Etudiant' or user.typeUt == 'Entreprise' %}
			<div class="clearfix">
				<div class="panel-body">
					<div class="row">
						<h4 style="padding-left: 20px; display: inline;"><i class="fa fa-briefcase fa-fw"></i> Informations professionnelles</h4>
					
						<dl class="dl-horizontal">
							<dt>
								Secteur d'activités
							</dt>
							<dd>
								{{ user.secteur }}
							</dd>
						</dl>
						{% if user.secteur == 'Autre' %}
						<dl class="dl-horizontal">
							<dt>
								Autre secteur
							</dt>
							<dd>
								{{ user.sectAutre }}
							</dd>
						</dl>
						{% endif %}
						{% if user.typeUt == 'Etudiant' %}
						<dl class="dl-horizontal">
							<dt>
								Métier
							</dt>
							<dd>
								{{ user.metier }}
							</dd>
						</dl>
						{% if user.metier == 'Autre' %}
						<dl class="dl-horizontal">
							<dt>
								Autre métier
							</dt>
							<dd>
								{{ user.metAutre }}
							</dd>
						</dl>
						{% endif %}
						{% endif %}
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.clearfix -->
			{% endif %}
		</div>
		<!-- /.panel -->
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->