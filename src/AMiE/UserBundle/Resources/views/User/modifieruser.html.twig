{% extends "AMiEHomeBundle::layout.html.twig" %}

{% block title "Modification" %}

{% block head "Modification du profil" %}

{% block content %}
<form action="{{ path('amie_user_modifieruser', { 'id': id }) }}" method="POST">
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-user fa-fw"></i> Informations de connexion</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								{{ form_label(form.username, 'Nom d\'utilisateur') }}
								{{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(form.email, 'Adresse email') }}
								{{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
							</div>
							<div class="form-group">
								{{ form_label(form.current_password, 'Mot de passe') }}
								{{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'} }) }}
							</div>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-phone fa-fw"></i> Coordonnées</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								<div class="fg-line">
									{{ form_label(form.nom, 'Nom') }}
									{{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
								</div>
							</div>
							<div class="form-group">
								<div class="fg-line">
									{{ form_label(form.prenom, 'Prénom (seulement profil étudiant)') }}
									{{ form_widget(form.prenom, { 'attr': {'class': 'form-control', 'placeholder': 'Prénom'} }) }}
								</div>
							</div>
							<div class="form-group">
								<div class="fg-line">
									{{ form_label(form.siret, 'Siret (seulement profil entreprise)') }}
									{{ form_widget(form.siret, { 'attr': {'class': 'form-control', 'placeholder': 'Siret'} }) }}
								</div>
							</div>
							<div class="form-group">
								<div class="fg-line">
									{{ form_label(form.rue, 'Rue, voie') }}
									{{ form_widget(form.rue, { 'attr': {'class': 'form-control', 'placeholder': 'Rue'} }) }}
								</div>
							</div>
							<div class="form-group">
								<div class="fg-line">
									{{ form_label(form.codePostal, 'Code postal') }}
									{{ form_widget(form.codePostal, { 'attr': {'class': 'form-control', 'placeholder': 'CP'} }) }}
								</div>
							</div>
							<div class="form-group">
								<div class="fg-line">
									{{ form_label(form.ville, 'Ville') }}
									{{ form_widget(form.ville, { 'attr': {'class': 'form-control', 'placeholder': 'Ville'} }) }}
								</div>
							</div>
							<div class="form-group">
								<div class="fg-line">
									{{ form_label(form.numero, 'Numéro de téléphone') }}
									{{ form_widget(form.numero, { 'attr': {'class': 'form-control', 'placeholder': 'Numéro'} }) }}
								</div>
							</div>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
			{% if user.typeUt == 'Entreprise' or user.typeUt == 'Etudiant' %}
			<div class="panel panel-default">
				<div class="panel-heading">
					<h4><i class="fa fa-briefcase fa-fw"></i> Secteur, métier</h4>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-lg-12">
                            <div class="form-group">
								{{ form_label(form.secteur, 'Secteur d\'activités *') }}
								{{ form_widget(form.secteur, { 'attr': {'class': 'form-control', 'placeholder': 'Secteur'} }) }}
                            </div>
                            <div class="form-group">
								{{ form_label(form.sectAutre, 'Si autre, précisez') }}
								{{ form_widget(form.sectAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Autre secteur'} }) }}
                            </div>
                            <div class="form-group">
								{{ form_label(form.metier, 'Métier dans l\'entreprise (seulement profil étudiant)') }}
								{{ form_widget(form.metier, { 'attr': {'class': 'form-control', 'placeholder': 'Métier'} }) }}
                            </div>
                            <div class="form-group">
								{{ form_label(form.metAutre, 'Si autre, précisez') }}
								{{ form_widget(form.metAutre, { 'attr': {'class': 'form-control', 'placeholder': 'Autre métier'} }) }}
                            </div>
						</div>
						<!-- /.col-lg-12 -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
			{% endif %}
		</div>
		<!-- /.col-lg-12 -->
		<div class="col-sm-offset-10 col-sm-1">
			<button type="submit" class="btn btn-primary">Valider</button>
		</div>
	</div>
	<!-- /.row -->
</form>
<!-- /.form -->
{% endblock %}